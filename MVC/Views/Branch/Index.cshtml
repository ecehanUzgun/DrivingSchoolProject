@model List<Branch>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["Success"]</span>
    </div>
}

<div class="row">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <div>
                    <i class="fas fa-table me-1"></i>
                    Şube Listesi
                </div>
                <a asp-action="Create" asp-controller="Branch" class="btn btn-success">Yeni Şube</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Şube</th>
                        <th>Adres</th>
                        <th>Telefon Numarası</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Güncelle</a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


